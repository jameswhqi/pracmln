2 Chord(n, V) => Pitch(n, 2) v Pitch(n, 5) v Pitch(n, 7)

5 Succ(n1, n2) ^ Chord(n1, c) => Chord(n2, c)
1 Succ(n1, n2) ^ Chord(n1, V) => Chord(n2, I)

2 Succ(n1, n2) ^ Pitch(n1, p) => Pitch(n2, p)
1 Succ(n1, n2) ^ Pitch(n1, 1) => Pitch(n2, 2)
1 Succ(n1, n2) ^ Pitch(n1, 2) => Pitch(n2, 3)
1 Succ(n1, n2) ^ Pitch(n1, 3) => Pitch(n2, 4)
1 Succ(n1, n2) ^ Pitch(n1, 4) => Pitch(n2, 5)
1 Succ(n1, n2) ^ Pitch(n1, 5) => Pitch(n2, 6)
1 Succ(n1, n2) ^ Pitch(n1, 6) => Pitch(n2, 7)
1 Succ(n1, n2) ^ Pitch(n1, 2) => Pitch(n2, 1)
1 Succ(n1, n2) ^ Pitch(n1, 3) => Pitch(n2, 2)
1 Succ(n1, n2) ^ Pitch(n1, 4) => Pitch(n2, 3)
1 Succ(n1, n2) ^ Pitch(n1, 5) => Pitch(n2, 4)
